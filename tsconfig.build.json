{
	"extends": "./tsconfig.json",
	// Modified config to only compile .ts[x]-files in the src dir
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"declaration": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}
